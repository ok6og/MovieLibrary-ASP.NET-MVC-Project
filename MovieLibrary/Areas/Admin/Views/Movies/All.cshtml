@model IEnumerable<MovieServiceModel>
@{
    ViewBag.Title = "Admin Operations";
}

<h1>All Cars</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Title</th>
            <th scope="col">Genre</th>
            <th scope="col">Year</th>
            <th scope="col">RuntimeInMinutes</th>
            <th scope="col">Description</th>
            <th scope="col">Approved</th>
            
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td scope="col">@movie.Id</td>
                <td scope="col">@movie.Title</td>
                <td scope="col">@movie.GenreName</td>
                <td scope="col">@movie.Year</td>
                <td scope="col">@movie.RuntimeInMinutes</td>
                <td scope="col">@movie.Description</td>
                <td scope="col">@(movie.IsPublic ? "Yes" : "No")</td>
                <td scope="col">

                    <a asp-area="" asp-controller="Movies" asp-action="Edit" asp-route-id="@movie.Id" class="btn btn-warning">Edit</a>
                    <a asp-area="" asp-controller="Movies" asp-action="Delete" asp-route-id="@movie.Id" class="btn btn-danger">Delete</a>
                    <a asp-area="Admin" asp-controller="Movies" asp-action="ChangeVisibility" asp-route-id="@movie.Id" class="btn btn-info">@(movie.IsPublic ? "Hide" : "Show")</a>
                    <a asp-area="" asp-controller="Movies" asp-action="Details" asp-route-id="@movie.Id" asp-route-information="@movie.GetInformation()" class="btn btn-primary">View</a>
                    

                </td>

            </tr>
        }
    </tbody>
</table>