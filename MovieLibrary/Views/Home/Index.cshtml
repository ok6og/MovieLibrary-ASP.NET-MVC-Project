@model List<MovieListingViewModel>

@{
    ViewData["Title"] = "Home Page";
}

@{
    var firstMovie = Model.Any() ? Model[0] : null;
    var secondMovie = Model.Count > 1 ? Model[1] : null;
    var thirdMovie = Model.Count > 2 ? Model[2] : null;
}

@if (!Model.Any())
{
    <div class="jumbotron">
        <h1 class="display-4">Welcome to the best Movie Library!</h1>
        <p class="lead">There are no movies in the system, but you could add one!</p>
        <hr class="my-4">
        <p class="lead">
            <a asp-controller="Movies" asp-action="Add" class="btn btn-primary btn-lg" role="button">Add Movie</a>
        </p>
    </div>
}

<div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
    </div>
    <div class="carousel-inner">
        @if (firstMovie != null)
        {
            <div class="carousel-item active">
                <img src="@firstMovie.ImageUrl" class="d-block w-100" alt="@firstMovie.Title (@firstMovie.Year)">
                <div class="carousel-caption d-none d-md-block">
                    <h5><a class="btn btn-primary" asp-controller="Movies" asp-action="Details" asp-route-id="@firstMovie.Id">@firstMovie.Title (@firstMovie.Year)</a></h5>
                </div>
            </div>
        }
        @if (secondMovie != null)
        {
            <div class="carousel-item">
                <img src="@secondMovie.ImageUrl" class="d-block w-100" alt="@secondMovie.Title (@secondMovie.Year)">
                <div class="carousel-caption d-none d-md-block">
                   <h5><a class="btn btn-primary" asp-controller="Movies" asp-action="Details" asp-route-id="@secondMovie.Id">@secondMovie.Title (@secondMovie.Year)</a></h5>
                </div>
            </div>
        }
        @if (thirdMovie != null)
        {
            <div class="carousel-item">
                <img src="@thirdMovie.ImageUrl" class="d-block w-100" alt="@secondMovie.Title (@secondMovie.Year)">
                <div class="carousel-caption d-none d-md-block">
                    <h5><a class="btn btn-primary" asp-controller="Movies" asp-action="Details" asp-route-id="@thirdMovie.Id">@thirdMovie.Title (@thirdMovie.Year)</a></h5>
                </div>
            </div>
        }
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>