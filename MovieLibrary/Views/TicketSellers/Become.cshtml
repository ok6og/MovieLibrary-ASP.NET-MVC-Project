@model BecomeTicketSellerFormModel

@{
    ViewBag.Title = "Become a Ticket Seller";
}


<div class="row">
    <div class="col-sm-12 offset-md-2 col-ld-8 offset-xl-3 col-xl-6">
        <h2 class="heading-margin text-center">@ViewBag.Title</h2>
        <form method="post">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" placeholder="Eventim, Bilet.bg, TicketStation...">
                <span asp-validation-for="Name" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber"></label>
                <textarea asp-for="PhoneNumber" rows="3" class="form-control" placeholder="+359-000-000-000"></textarea>
                <span asp-validation-for="PhoneNumber" class="small text-danger"></span>
            </div>
            <input class="btn btn-primary mt-2" type="submit" value="Save" />
        </form>
    </div>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}

