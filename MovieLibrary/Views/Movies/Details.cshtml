@model MovieDetailsServiceModel

<div class="col-md-6 offset-3">
    <h2>@Model.Title (@Model.GenreName)</h2>
</div>

<div class="card mb-3 mt-5" style="max-width: 1300px;">
  <div class="row g-0">
    <div class="col-md-4">
      <img src="@Model.ImageUrl" class="img-fluid rounded-start" alt="...">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">@Model.Title</h5>
        <p class="card-text">@Model.Description</p>
      </div>
    </div>
  </div>
</div>